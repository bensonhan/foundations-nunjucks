{% extends "layout.njk" %} 
{% block content %}
<!-- Header -->
<header class="masthead" id="events-masthead">
    <div class="container">
        <div class="intro-text">
            {#
            <div class="intro-lead-in">Foundations Choreography</div> #}
            <div class="intro-heading">Events</div>
            {#
            <a class="btn btn-xl js-scroll-trigger" href="#services">Build Yourself!</a> #}
        </div>
    </div>
</header>
<section>
    <div class="container">
        {% include '../templates/partials/calendar.njk' %}
    </div>
</section>
<section class="bg-light" id="portfolio">
    <div class="container">
