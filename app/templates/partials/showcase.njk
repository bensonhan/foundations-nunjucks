<div class="row">
    <div class="col-lg-12 text-center">
        <div class="tab-content">
            <div class="row">
                {% for team in teams|sort(true, false, 'weight') %}
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <a class="portfolio-link" data-toggle="modal" href="#portfolioModal{{ team.id }}">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src=
                        {% if team.placeholder == "N" %}"./img/teams/{{ team.img }}"
                        {% else %}"./img/teams/placeholder.jpg"
                        {% endif %}
                        alt="">
                    </a>
                    <div class="portfolio-caption">
                        <h4>{{ team.name }}</h4>
                        <p class="text-muted">{{ team.quarter }} {{ team.year }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
