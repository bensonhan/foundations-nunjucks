<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Highlights</h2>
            <h3 class="section-subheading text-muted">A sneak peak of some our most epic moments</h3>
        </div>
    </div>

    <div class="row">
        {% for event in events|sort(true, false, 'weight') %}
        <div class="col-md-4 col-sm-6 portfolio-item">
            <a class="portfolio-link" data-toggle="modal" href="#portfolioModal{{ event.id }}">
                <div class="portfolio-hover">
                    <div class="portfolio-hover-content">
                        <i class="fa fa-plus fa-3x"></i>
                    </div>
                </div>
                <img class="img-fluid" src="./img/{{ event.img }}"" alt="">
            </a>
            <div class="portfolio-caption">
                <h4>{{ event.name }}</h4>
                <p class="text-muted">{{ event.quarter }} {{ event.year }}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>